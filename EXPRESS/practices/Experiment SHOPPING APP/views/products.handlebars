<div class="container mt-5">

<h1 style="font-family:cursive ;"> Product</h1>


    <table class="table table-dark table-striped">
     <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">PRODUCT NAME</th>
            <th scope="col">PRODUCT DESCRIPTION</th>
            <th scope="col">PRODUCT PRIZE</th>
            <th scope="col">EDIT PRODUCT</th>
            <th scope="col">DELETE PRODUCT</th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <th>  {{_id}}  </th>
            <th>  {{pname}}  </th>
            <th>  {{pdesc}}  </th>
            <td>  {{pprize}}  </td>
            <td>  <form action="/products/edit-product/{{_id}}" method="GET"> <button type="submit " class="btn btn-primary">EDIT</button> </form></td>
            <td>  <form action="/products/delete-product/{{_id}}" method="GET"> <button type="submit " class="btn btn-danger">DELETE</button> </form></td>
        </tr>
        {{/each }}
    </tbody>
</table>
</div>